{
  "tags": {
    "allowUnknownTags": true
  },
  "source": {
    "include": ["./"],          // كل الملفات في المشروع
    "exclude": ["node_modules", ".git", "docs"], // استبعاد مجلدات غير ضرورية
    "includePattern": ".js$",   // فقط ملفات JS
    "excludePattern": "(\\.test\\.js$|\\.spec\\.js$)" // استبعاد ملفات الاختبارات إذا وجدت
  },
  "opts": {
    "encoding": "utf8",
    "destination": "./docs",      // مجلد الإخراج
    "recurse": true,              // البحث داخل كل المجلدات الفرعية
    "template": "default",        // قالب افتراضي (يمكن تغييره لاحقًا)
    "tutorials": "./tutorials"   // لو لديك ملفات تعليمية يمكنك إضافتها
  },
  "templates": {
    "cleverLinks": true,
    "monospaceLinks": true,
    "default": {
      "outputSourceFiles": true
    }
  }
}
